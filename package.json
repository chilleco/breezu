{
  "name": "chillui",
  "version": "0.1.0",
  "description": "Minimalist universal UI framework",
  "main": "dist/index.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile:scss": "node-sass src/main.scss dist/main.css",
