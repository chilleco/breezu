  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chilleco/chillui/issues"
  },
  "homepage": "https://github.com/chilleco/chillui#readme",
  "dependencies": {
    "concat": "^1.0.3",
    "cssnano": "^6.0.1",
    "node-sass": "^9.0.0",
    "postcss-cli": "^10.1.0"
  }
}
